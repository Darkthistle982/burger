<div class="container bg">
    <div class="row">
        <div class="center col-sm-12">
            {{!-- Insert a top burger image here --}}
            <img src="https://i.imgur.com/izk0psF.jpg?1" alt="Eat-A-Burger App" 
            style="width: 250px; height: 175px; align-content: center;">

            <h1 class="font-weight-bolder">Eat-A-Burger</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <br>
            <h2>Burgers Available to Eat!</h2>
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}
                    {{this.burger_name}}
                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Devour It!</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6">
            <br>
            <h2>Burgers That Have Been Eaten</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="center col-sm-12">
            <h2>Add a Burger</h2>
            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <p>Enter a burger you want to eat and click the 'Yum!' button.</p>
                    <input type="text" id="burgerInput" name="burger_name">
                </div>
                <button class="btn-primary" type="submit">Yum!</button>
            </form>
        </div>
    </div>
</div>